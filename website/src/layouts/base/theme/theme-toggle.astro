<button
  class="rounded-md border border-black p-1 dark:border-whiteish"
  aria-label="theme toggle"
  data-theme-toggle
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width={1.5}
    stroke="currentColor"
    class="h-5 w-5 dark:hidden"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
    ></path>
  </svg>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width={1.5}
    stroke="currentColor"
    class="hidden h-5 w-5 dark:block"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
    ></path>
  </svg>
</button>

<script>
  import { Theme, THEME_KEY } from "./config";

  const setInitialTheme = () => {
    if (
      localStorage.getItem(THEME_KEY) === "dark" ||
      (!(THEME_KEY in localStorage) &&
        window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches)
    ) {
      document.documentElement.classList.add("dark");
      localStorage.setItem(THEME_KEY, "dark");
    } else {
      document.documentElement.classList.remove("dark");
      localStorage.setItem(THEME_KEY, "light");
    }
  };

  const updateThemeClass = (theme: Theme) => {
    if (theme === Theme.Light) {
      document.documentElement.classList.remove("dark");
    } else {
      document.documentElement.classList.add("dark");
    }
  };

  const toggleTheme = () => {
    const currentTheme = localStorage.getItem(THEME_KEY);
    const newTheme = currentTheme === Theme.Dark ? Theme.Light : Theme.Dark;

    updateThemeClass(newTheme);

    localStorage.setItem(THEME_KEY, newTheme);
  };

  const setUpToggle = () => {
    document
      .querySelector("[data-theme-toggle]")
      ?.addEventListener("click", toggleTheme);
  };

  const syncTheme = (e: StorageEvent) => {
    if (e.key === THEME_KEY) {
      updateThemeClass(e.newValue as Theme);
    } else if (e.key === null) {
      // if local storage is cleared
      const theme = localStorage.getItem(THEME_KEY);
      if (theme === null) {
        setInitialTheme();
      }
    }
  };

  // we don't need to remove event listener because it's added only once
  window.addEventListener("storage", syncTheme);

  setUpToggle();
  document.addEventListener("astro:after-swap", () =>
    setUpToggle()
  );
</script>
